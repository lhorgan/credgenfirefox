{

    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
  
    "description": "Adds a red border to all webpages matching mozilla.org.",
  
    "icons": {
      "48": "icons/border-48.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "soystuff@gmail.com"
      }
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*", "*://*.twitter.com/*"],
        "js": ["borderify.js"]
      }
    ],

    "background": {
        "scripts": ["background.js"]
    },
    
    "permissions": [
        "proxy",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
  
  }
